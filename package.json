{
  "name": "menota-helper",
  "displayName": "Menota Helper",
  "description": "A small extension meant to automate tedious manual inserting of tags.",
  "version": "1.0.1",
  "repository": "https://github.com/motheatensoul/menota-helper",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "menota-helper.insertElement",
        "title": "Insert TEI Element",
        "category": "Menota Helper"
      },
      {
        "command": "menota-helper.insertWithPreview",
        "title": "Insert TEI Element with Preview",
        "category": "Menota Helper"
      },
      {
        "command": "menota-helper.insertNextPb",
        "title": "Insert Next Page Break",
        "category": "Menota Helper"
      },
      {
        "command": "menota-helper.insertNextLb", 
        "title": "Insert Next Line Break",
        "category": "Menota Helper"
      },
      {
        "command": "menota-helper.insertCustomElement",
        "title": "Insert Custom TEI Element",
        "category": "Menota Helper"
      }
    ],
    "keybindings": [
      {
        "command": "menota-helper.insertWithPreview",
        "key": "ctrl+shift+?",
        "when": "editorLangId == xml"
      },
      {
        "command": "menota-helper.insertNextPb",
        "key": "ctrl+enter",
        "when": "editorLangId == xml"
      },
      {
        "command": "menota-helper.insertNextLb",
        "key": "shift+enter", 
        "when": "editorLangId == xml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  }
}
